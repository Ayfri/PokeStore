---
import { Image } from "astro:assets";

interface Props {
	card_name: string;
	card_img: string;
	type: string;
	number: number;
	set: string;
	subtypes: string;
	supertype: string;
	rarity: string;
}

const { card_name, card_img, type, number, set, subtypes, supertype, rarity } = Astro.props;
---

<section class="card-grid">
	<div class={`pokestore_card card ${type} / interactive masked`}
		 data-number={number} data-set={set} data-subtypes={subtypes}
		 data-supertype={supertype} data-rarity={rarity} data-trainer-galery="false">
		<div class="card__translater">
			<button class="card__rotator">
				<img class="card__back" src="https://tcg.pokemon.com/assets/img/global/tcg-card-back-2x.jpg"
					 alt="Pokemon Card Back" loading="lazy"/>
				<div class="card__front">
					<Image src={card_img} alt={card_name} width="660" height="921"/>
					<div class="card__shine"></div>
					<div class="card__glare"></div>
				</div>
				<!--<div class="pokestore_aura"></div>-->
				<!--<h2>{card_name}</h2>-->
			</button>
		</div>
	</div>
</section>

<style>
